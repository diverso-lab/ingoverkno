<style>
#instance_form {
  font-family: Arial, sans-serif;
  width: 100%;
}

body{
  margin:0;
  -webkit-user-select: none; /* Chrome, Safari, and Opera */
  -moz-user-select: none;    /* Firefox */
  -ms-user-select: none;     /* Internet Explorer */
  user-select: none;         /* Standard syntax */
}

nav{
  width: 100%;
  height: 10em;
  position: relative;
}

.featureModel{
  width: 100em;
  height: 35em;
  box-shadow: 0 0 10px rgba(0,0,0,0.3);
  margin: 4em;
}

.upperHeader{
  background-color: rgb(26,25,23);
  height: 30%;
}

.bottomHeader{
  background-color: rgb(237,236,235);
  height: 70%;
}

nav img{
  position: absolute;
  height: 80%;
  margin-left: 3em;
  margin-top: 1em;
}

.container
{
  margin: 1em;
  padding: 2em;
  width: 45em;
  box-shadow: 0 0 10px rgba(0,0,0,0.3);
  border-radius: 0.5em;
  background-color: rgb(237,236,235);
}

.container-bottom
{
  margin-right: 1em;
  padding: 2em;
  width: 20em;
  box-shadow: 0 0 10px rgba(0,0,0,0.3);
  border-radius: 0.5em;
  background-color: rgb(237,236,235);
}

h1
{
  text-align: center;
  font-size: 1.5em;
  margin-bottom: 1em;
}

ul{
  padding: 0;
  margin: 0;
  padding-right: 1em;
  list-style: none;
}

.form-group {
  margin-bottom: 2em;
  display: flex;
}

.check-group {
  margin-bottom: 2em;
  display: flex;
}

.form-group label {
  display: flex;
  margin-right: 1em;
  width: 6em;
}

.check-group label {
  display: flex;
  margin-right: 1em;
  width: 10em;
}

.form-group input[type="file"] {
  position: relative;
  opacity: 0; /* Make file input invisible but still functional */
  width: 10em;
  height: 10em;
  cursor: pointer; /* Pointer cursor on hover */
}

.form-group .file-upload-button {
  position: relative;
  display: block; /* Display block to take full width */
  padding: 1em;
  width: 10em;
  height: 10em;
  color: black;
  text-align: center;
  border: 2px dashed black;
  cursor: pointer;
}

.form-group img {
  display: block; /* Display block to take full width */
  padding: 1em;
  width: 10em;
  height: 10em;
  position: absolute;
  top: 0;
  left: 0;
  display: none;
  object-fit: fill;
  
}

.form-group input[type="submit"]  {
  padding: 10px 20px;
  color: #fff;
  background-color: #007BFF;
  border: none;
  cursor: pointer;
}

button:hover {
  background-color: #0056b3;
}

</style>

<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

<script>
  document.addEventListener("DOMContentLoaded", function() {
    function handleFileSelect(evt) {
      var files = evt.target.files;
      var output = document.getElementById(evt.target.id + '_preview');
      var mark = document.getElementById(evt.target.id + '_mark');
      if (files && files[0]) {
        var reader = new FileReader();
        reader.onload = function(e) {
          output.src = e.target.result;
          mark.style.visibility = 'hidden';
          output.style.display = 'block';
          output.style.visibility = 'visible';
        }
        reader.readAsDataURL(files[0]);
      }
    }

    // Attach the event handler for both inputs
    document.getElementById('instance_banner').addEventListener('change', handleFileSelect, false);
    document.getElementById('instance_logo').addEventListener('change', handleFileSelect, false);
  });

</script>

<nav>
