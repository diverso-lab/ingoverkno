<div style= 'display: flex;  margin-left: 2em; margin-top: 2em;'>
<%= form_with(model: @instance, html: { id: 'instance_form', multipart: true }, local: true) do |f| %>
    <div class = 'container'>
      <h1>Council</h1>

      <div style = 'display: flex'>
